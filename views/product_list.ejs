<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("partials/head.ejs") %>
    <title>The Mobile Hour - Our Products</title>
  </head>
  <body>
    <main>
      <%- include("partials/header.ejs") %>
      <form action="product_list" method="get" class="search-form">
        <input type="text" name="search_term" id="search-term" placeholder="e.g. Samsung" />
        <input type="submit" value="Search" />
      </form>
      <section class="phone-list">
        <% for (let product of products) { %>
        <article class="phone-card">
          <img src="img/phone.jpg" alt="Mobile phone" />
          <h2><%- product.product_name %></h2>
          <span>Model: <%- product.product_model %></span>
          <p>Price: $<%- product.product_price %></p>
          <a href="product_checkout?id=<%- product.product_id %>">BUY</a>
        </article>
        <% } %>
      </section>
      <%- include("partials/footer.ejs") %>
    </main>
  </body>
</html>
